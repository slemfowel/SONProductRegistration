@model IEnumerable<SonProductRegistration.Web.Models.ProductCategoryView>

@{
    ViewBag.Title = "Product Categories";
    Layout = "~/Views/Shared/_secureAdmin.cshtml";
}

<div class="vatebra-pageheader">
    <ol class="breadcrumb vatebra-breadcrumb">
        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Dashboard</li>
    </ol>
    <h6 class="vatebra-pagetitle text-uppercase">Product Categories</h6>
</div>
<div class="section-wrapper">
    <div id="product-categories-component" class="vatebra-manage-component stackable-panel">
        <div class="panel manage-products-listing-panel" selected id="manage-products-listing-component">
            <div class="d-flex mb-2">
                <div class="d-flex w-100">
                    <div mat-input-field class="mat-input-field form-group mb-2 mr-2">
                        <div class="label">Search:</div>
                        <div>
                            <input type="text" class="form-control" id="search-textbox" placeholder="">
                        </div>
                    </div>
                    <div class="">
                        <button type="submit" id="search-product-category-button" class="btn btn-primary mb-2">Search</button>
                    </div>
                </div>
                <div class="width-320px">
                    <div class="d-flex float-right">
                        <button type="submit" id="new-product-category-button" class="btn btn-primary mb-2">
                            <i class="fa fa-plus"></i>
                            <span>New Category</span>
                        </button>
                    </div>
                </div>
            </div>
            <div>
                <table id="product-categories-datagridview" class="vatebra-datagridview table table-striped">
                    <thead class="thead-colored bg-success">
                        <tr>
                            <th class="width-60px">
                                - # -
                            </th>
                            <th>
                                Description
                            </th>
                            <th class="width-300px">
                                Sector
                            </th>
                            <th class="width-200px text-center">Action</th>
                        </tr>
                    </thead>
                    @{
                        var rowCount = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr aria-datagrid-row data-product-category-id="@item.ProductCategoryID" href="/productcategories/edit/@item.ProductCategoryID">
                            <td class="text-center">
                                @Html.Raw(rowCount += 1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SectorName)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Details", "Details", new { id = item.ProductCategoryID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ProductCategoryID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div>
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item active">
                            <span class="page-link">
                                2
                                <span class="sr-only">(current)</span>
                            </span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="createoredit-product-category-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Product Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="createoredit-product-category-modal-view" class="createoredit-product-category-modal-view pl-3 pt-0 pr-3 pb-3">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="save-product-category-button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>