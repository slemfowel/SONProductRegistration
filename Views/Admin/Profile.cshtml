@model SonProductRegistration.Web.Models.Company

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_secureAdmin.cshtml";
}






<div class="vatebra-pageheader">
    <ol class="breadcrumb vatebra-breadcrumb">
        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Dashboard</li>
    </ol>
    <h6 class="vatebra-pagetitle text-uppercase">Profile</h6>
</div>
<div class="section-wrapper">
    <div id="company-profile-component" class="vatebra-manage-component stackable-panel">
        <div class="panel manage-products-listing-panel" selected id="manage-products-listing-component">
            <div class="width-600px">

                <div>
                    <div class="mb-3">
                        <h5>Personal Details</h5>
                        <div class="dropdown-divider"></div>
                    </div>

                    <div class="form-group d-flex">
                        <div class="width-35px mr-3">
                            <i class="ion-ios-contact text-35px line-height-35px"></i>
                        </div>
                        <div class="w-100">
                            <div class="font-weight-bold">Name:</div>
                            <div>@Html.DisplayFor(model => model.ContactPersonName)</div>
                        </div>
                    </div>

                    <div class="d-flex w-100">
                        <div class="form-group w-50 d-flex">
                            <div class="width-35px mr-3">
                                <i class="ion-ios-telephone text-20px line-height-18px"></i>
                            </div>
                            <div class="w-100">
                                <div class="font-weight-bold">Phone Number:</div>
                                <div>@Html.DisplayFor(model => model.ContactPersonPhoneNumber)</div>
                            </div>
                        </div>

                        <div class="form-group w-50">
                            <div class="font-weight-bold">Email Address:</div>
                            @Html.DisplayFor(model => model.ContactPersonEmail)
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@* profile edit modal *@
<div class="modal fade" id="createoredit-company-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Product Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="createoredit-company-modal-view" class="createoredit-company-modal-view pl-3 pt-0 pr-3 pb-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="save-company-button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>
